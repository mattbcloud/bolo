{
  "name": "orona",
  "version": "0.2.0",
  "description": "Bolo, a game of tank warfare, rewritten for modern browsers.",
  "homepage": "http://stephank.github.com/orona/",
  "repository": {
    "type": "git",
    "url": "http://github.com/stephank/orona.git"
  },
  "author": {
    "name": "StÃ©phan Kochen",
    "email": "stephan@kochen.nl",
    "url": "http://stephan.kochen.nl/"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc -p tsconfig.client.json && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "dev": "vite",
    "dev:server": "tsx watch src/server/command.ts",
    "start": "node dist/server/server/command.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/connect": "^3.4.38",
    "@types/serve-static": "^2.2.0",
    "connect": "^3.7.0",
    "serve-static": "^2.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "vite": "^5.3.0"
  },
  "bin": {
    "bolo-server": "./dist/server/server/command.js"
  }
}
